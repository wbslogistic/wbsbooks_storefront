<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:listing_news) %>
<% end %>

<% content_for :page_actions do %>
  <ul class="actions inline-menu">
    <li>
      <%= button_link_to Spree.t(:new_item), new_admin_n_items_path, { :icon => 'plus', :id => 'admin_new_item' } %>
    </li>
  </ul>
<% end %>

<table class="index" id='listing_news' data-hook>
  <colgroup>
    <col style="width: 35%" />
    <col style="width: 35%" />
    <col style="width: 20%" />
    <col style="width: 10%" />
  </colgroup>
  <thead>
    <tr data-hook="tax_header">
      <th><%= Spree.t(:name) %></th>
      <th><%= Spree.t(:location) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |item| %>
      <tr id="<%= spree_dom_id item %>" data-hook="country_row" class="<%= cycle('odd', 'even')%>">
        <td><%= item.name %></td>
        <td><%= item.location %> </td>
        <td class="actions">
          <%= link_to_edit item, :no_text => true %>
          <%= link_to_delete item, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
