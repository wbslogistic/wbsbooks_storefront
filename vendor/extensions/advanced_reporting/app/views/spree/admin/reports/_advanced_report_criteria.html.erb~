  <option <%= full_path %> value="<%= value %>">
    <% value_name = value.is_a?(Hash) ? value[:name].downcase.gsub(" ","_") : value.split('/').last.to_s.downcase.gsub(" ","_") rescue nil %>
    <%= t("adv_report."+value_name) rescue nil %>
  </option>
<% end %>
</select>
