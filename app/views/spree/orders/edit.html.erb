<% @body_id = 'cart' %>
<div data-hook="cart_container">
  <h1><%= Spree.t(:shopping_cart) %></h1>

  <% if @order.line_items.empty? %>

    <div data-hook="empty_cart">
      <p><%= Spree.t(:your_cart_is_empty) %></p>
      <p><%= link_to Spree.t(:continue_shopping), spree.root_path, :class => 'btn btn-primary' %></p>
    </div>

  <% else %>

    <div data-hook="outside_cart_form">
      <%= form_for @order, :url => update_cart_path, :html => {:id => 'update-cart'} do |order_form| %>
        <div data-hook="inside_cart_form">

          <div data-hook="cart_items">
            <%= render :partial => 'form', :locals => { :order_form => order_form } %>
          </div>

          <div class="buttons">
<!--             <%= order_form.text_field :coupon_code, :size => 10, :placeholder => Spree.t(:coupon_code) %> -->
              <div class="left"><%= link_to Spree.t(:continue_shopping), spree.root_path, :class => 'btn btn-primary' %></div>

            <div class="right"><%= button_tag :class => 'btn btn-primary', :id => 'checkout-link', :name => 'checkout' do %>
              <%= Spree.t(:checkout) %></div>
             <div class="right"><%= button_tag :class => 'btn btn-primary', :id => 'update-button' do %>
              <%= Spree.t(:update) %>
          <% end %></div>
            <div class="right">
                <%= form_tag empty_cart_path, :method => :put do %>
                  <p id="clear_cart_link" data-hook>
                  <%= submit_tag Spree.t(:empty_cart), :class => 'btn btn-primary' %>
                  </p>
                <% end %>
            </div>

            <% end %>
          </div>

        </div>
      <% end %>
    </div>

    

  <% end %>
</div>
