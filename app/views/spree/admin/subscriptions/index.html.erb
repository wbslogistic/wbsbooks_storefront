<% content_for :page_title do %>
<%= Spree.t(:listing_subscriptions) %>
<% end %>
<% content_for :page_actions do %>
<li>
<%= button_link_to Spree.t(:new_subscription), new_admin_subscription_url, :icon => 'plus', :id => 'admin_new_subscription_link' %>
</li>
<% end %>
<table class="index" id="listing_subscriptions" data-hook>
<colgroup>
<col style="width: 35%">
<col style="width: 35%">
<col style="width: 10%">
<col style="width: 10%">
</colgroup>
<thead>
<tr data-hook="admin_subscriptions_index_headers">
<th>Name</th>
<th>Description</th>
<th></th>
<th></th>
</tr>
</thead>
<tbody>
<% @subscriptions.each do |subscription|%>
<tr id="<%= spree_dom_id subscription %>" data-hook="admin_subscriptions_index_rows" class="<%= cycle('odd', 'even')%>">
<td class='Subscription_email'><%=link_to subscription.name.capitalize, admin_subscription_url(subscription) %></td>
<td><%=subscription.description.capitalize%></td>
<td >
    <%= link_to 'Edit', edit_admin_subscription_url(subscription)  %>   
</td>
<td>
    <%= link_to 'Delete', admin_subscription_path(subscription), :confirm => "are you sure?", :method => :delete %>
</td>
</tr>
<% end %>
</tbody>
</table>

