<% content_for :page_title do %>
<%= Spree.t(:listing_notifications) %>
<% end %>
<% content_for :page_actions do %>
<li>
<%= button_link_to Spree.t(:new_notification), new_admin_notification_url, :icon => 'plus', :id => 'admin_new_notification_link' %>
</li>
<% end %>
<table class="index" id="listing_notifications" data-hook>
<colgroup>
<col style="width: 35%">
<col style="width: 35%">
<col style="width: 10%">
<col style="width: 10%">
</colgroup>
<thead>
<tr data-hook="admin_notifications_index_headers">
<th>Name</th>
<th>Description</th>
<th></th>
<th></th>
</tr>
</thead>
<tbody>
<% @notifications.each do |notification|%>
<tr id="<%= spree_dom_id notification %>" data-hook="admin_notifications_index_rows" class="<%= cycle('odd', 'even')%>">
<td class='notification_email'><%=link_to notification.name.capitalize, edit_admin_notification_url(notification) %></td>
<td><%=notification.description.capitalize%></td>
<td >
    <%= link_to 'Edit', edit_admin_notification_url(notification)  %>   
</td>
<td>
    <%= link_to 'Delete', admin_notification_path(notification), :confirm => "are you sure?", :method => :delete %>
</td>
</tr>
<% end %>
</tbody>
</table>

